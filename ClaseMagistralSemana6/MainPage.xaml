<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClaseMagistralSemana6.MainPage">

    <StackLayout>
        <Label Text="Datos Mostrados" FontSize="20" HorizontalTextAlignment="Center"></Label>

        <ListView x:Name="MyListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label x:Name="lblnombre" Text="{Binding nombre}"></Label>

                            <Label x:Name="lblapellido" Text="{Binding apellido}"></Label>
                            <Label x:Name="lbledad" Text="{Binding edad}"></Label>
                            
                        </StackLayout>
               
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
  
    </StackLayout>

</ContentPage>
